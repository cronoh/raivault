{
  "name": "RaiVault",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Wallet for interacting with RaiBlocks nodes",
  "author": "Andrew Steele",
  "devDependencies": {
    "electron-builder": "^19.52.1"
  },
  "build": {
    "appId": "com.electron.raivault",
    "buildVersion": "1.0.0",
    "productName": "RaiVault",
    "copyright": "Copyright Â© 2018 Andrew Steele",
    "directories": {
      "output": "dist",
      "app": "rai-wallet"
    },
    "mac": {
